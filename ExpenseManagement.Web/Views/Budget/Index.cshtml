@model IEnumerable<Budget>
<div class="w-100 card border-0 p-4">
    <div class="card-header bg-success bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Budget List</h2>
            </div>
        </div>
    </div>
    <div class="card-body border p-4">
        <div class="row pb-3">
            <div class="col-6 offset-6 text-end">
                <a asp-controller="Budget" asp-action="AddBudget" class="btn btn-secondary">
                    <i class="bi bi-plus-circle"></i> Create New Budget
                </a>
            </div>
        </div>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        Monthly Limit
                    </th>
                    <th>Spent Amount</th>
                    <th>Month</th>
                    <th>Year</th>
                    <th>User Name</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td>@obj.MonthlyLimit</td>
                        <td>@obj.SpentAmount</td>
                        <td>@obj.Month.ToString("MMMM")</td>
                        <td>@obj.Month.Year</td>
                        <td>@(!string.IsNullOrEmpty(obj.User?.UserName) ? obj.User?.UserName : "Not Assigned")</td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Budget" asp-action="EditBudget" asp-route-Id="@obj.Id"
                                   class="btn btn-success mx-2">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-controller="Budget" asp-action="Delete" asp-route-Id="@obj.Id"
                                   class="btn btn-danger mx-2">
                                    <i class="bi bi-trash-fill"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
